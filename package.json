{
  "name": "ackee-action",
  "version": "0.0.0",
  "description": "GitHub action to generate an Ackee analytics report",
  "author": "Giacomo Debidda",
  "license": "MIT",
  "keywords": [
    "ackee",
    "actions",
    "analytics",
    "github",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackdbd/ackee-action.git"
  },
  "bugs": {
    "url": "https://github.com/jackdbd/ackee-action/issues"
  },
  "homepage": "https://github.com/jackdbd/ackee-action#readme",
  "main": "lib/main.js",
  "scripts": {
    "prebuild": "npm run clean && npm run format && npm run format-check",
    "build:tsc": "tsc --pretty",
    "build:ncc": "ncc build lib/main.js --out dist --license licenses.txt --source-map",
    "build": "npm run build:tsc && npm run build:ncc",
    "clean": "rm -rf lib dist",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "prepare": "husky install",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^15.6.0",
    "@typescript-eslint/parser": "^4.8.1",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
